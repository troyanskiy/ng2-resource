{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
//    "inlineSourceMap": true,
//    "inlineSources": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "types": ["node", "jasmine"],
    "lib": ["es2015", "dom"]
  },
  "files": [
    "index.ts",
    "ngx-resource.ts",
    "./src/Interfaces.ts",
    "./src/Resource.ts",
    "./src/ResourceAction.ts",
    "./src/ResourceCRUD.ts",
    "./src/ResourceCRUDBase.ts",
    "./src/ResourceGlobalConfig.ts",
    "./src/ResourceModel.ts",
    "./src/ResourceParams.ts",
    "./src/ResourceProviders.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
